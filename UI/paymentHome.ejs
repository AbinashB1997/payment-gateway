<!DOCTYPE html>
<html>
    <title>Stripe Payment Demo</title>
    <body>
        <h3>Payment Options</h3>
        <form action="<%= endpoint %>" method="POST">
            <input type="text" value="<%= amount %>" name="amount" readonly="readonly" hidden/>
        <script
            src="<%= src %>"
            class="stripe-button"
            data-key="<%= key %>"
            data-amount="<%= amount %>"
            data-currency="<%= currency %>"
            data-name="<%= name %>"
            data-description="<%= description %>"
            data-locale="<%= locale %>" >
            </script>
        </form>
    </body>
</html>